<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <LinearLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Who is the president of:"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Nigeria"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radio_nigeria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/radioYemi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yemi Osinbajo" />

                <RadioButton
                    android:id="@+id/radioObasanjo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Olusegun Obasanjo" />

                <RadioButton
                    android:id="@+id/radioBuhari"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Muhammadu Buhari" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Mozambique"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radio_Mozambique"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/radioRosario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carlos RosÃ¡rio"
                    />

                <RadioButton
                    android:id="@+id/radioNyusi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filipe Nyusi"
                    />

                <RadioButton
                    android:id="@+id/radioSamora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Samora Machel"
                    />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Malawi"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radio_Malawi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/radioMutharika"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peter Mutharika"
                    />

                <RadioButton
                    android:id="@+id/radioBanda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hastings Banda"
                    />

                <RadioButton
                    android:id="@+id/radioChakwera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lazarus Chakwera"
                    />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Burundi"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/radio_Burundi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/radioNkurunzinza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pierre Nkurunziza"
                    />

                <RadioButton
                    android:id="@+id/radioKagame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paul Kagame"
                    />

                <RadioButton
                    android:id="@+id/radioNdayieze"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Domitien Ndayizeye"
                    />

            </RadioGroup>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Who was the first president of Tanzania?"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/name_of_buyer"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="textCapWords"
                android:layout_marginBottom="48dp"
                android:hint="Enter name here"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_shape_round"
            android:onClick="submitAnswers"
            android:text="submit"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#c8001e" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_shape_round"
        android:onClick="clearInputs"
        android:text="clear"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#c8001e" />
</RelativeLayout>
</ScrollView>
